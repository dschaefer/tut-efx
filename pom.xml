<?xml version="1.0" encoding="UTF-8"?>
<project>
	<modelVersion>4.0.0</modelVersion>
	<groupId>doug.tutorial.efx</groupId>
	<artifactId>parent</artifactId>
	<version>1.0.0-SNAPSHOT</version>
	<packaging>pom</packaging>
	
	<modules>
		<module>doug.tutorial.efx</module>
		<module>doug.tutorial.efx.provider</module>
		<module>doug.tutorial.efx.feature</module>
		<module>doug.tutorial.efx.product</module>
	</modules>
	
	<properties>
		<tycho.version>0.20.0</tycho.version>
		<eclipse.repo>http://download.eclipse.org/releases/luna</eclipse.repo>
		<cbi.jdt.version>3.10.0.v20140316-0146</cbi.jdt.version>
	</properties>

	<repositories>
		<repository>
			<id>kepler</id>
			<url>${eclipse.repo}</url>
			<layout>p2</layout>
		</repository>
	</repositories>

	<pluginRepositories>
		<pluginRepository>
			<id>cbi-jdt</id>
			<url>https://repo.eclipse.org/content/repositories/eclipse-staging</url>
		</pluginRepository>
	</pluginRepositories>

	<build>
		<plugins>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-maven-plugin</artifactId>
				<version>${tycho.version}</version>
				<extensions>true</extensions>
			</plugin>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-compiler-plugin</artifactId>
				<version>${tycho.version}</version>
				<dependencies>
					<dependency>
						<groupId>org.eclipse.jdt</groupId>
						<artifactId>org.eclipse.jdt.core</artifactId>
						<version>${cbi.jdt.version}</version>
					</dependency>
				</dependencies>
			</plugin>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>target-platform-configuration</artifactId>
				<version>${tycho.version}</version>
				<configuration>
					<environments>
						<environment>
							<os>macosx</os>
							<ws>javafx</ws>
							<arch>x86_64</arch>
						</environment>
						<environment>
							<os>win32</os>
							<ws>javafx</ws>
							<arch>x86_64</arch>
						</environment>
						<environment>
							<os>win32</os>
							<ws>javafx</ws>
							<arch>x86</arch>
						</environment>
						<environment>
							<os>linux</os>
							<ws>javafx</ws>
							<arch>x86_64</arch>
						</environment>
						<environment>
							<os>linux</os>
							<ws>javafx</ws>
							<arch>x86</arch>
						</environment>
					</environments>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>